<Project Sdk="Microsoft.NET.Sdk">
    
    <PropertyGroup>
		<TargetFramework>net48</TargetFramework>
        <LangVersion>latest</LangVersion>
		<PathMap>$(MSBuildProjectDirectory)=\RainWorldMods\ExtendedItemTracking</PathMap>
    </PropertyGroup>
    
	<ItemGroup>
		<Reference Include="../lib/*.dll">
			<Private>false</Private>
		</Reference>
	</ItemGroup>
    
    <Target Name="GenerateMod" AfterTargets="PostBuildEvent">
		<ItemGroup>
			<RemovePlugins Include="../mod/plugins/*.dll" />
			<RemovePdbs Include="$(OutDir)*.pdb" />
		</ItemGroup>
		
		<ItemGroup>
			<CopyPlugins Include="$(TargetPath)" />
			<CopyPdbs Include="$(OutDir)*.pdb" />
		</ItemGroup>
		
        <Delete Files="@(RemovePlugins)" />
        <Copy SourceFiles="@(CopyPlugins);@(CopyPdbs)" DestinationFolder="../mod/plugins/" />
    </Target>
    
</Project>
